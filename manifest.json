{
    "manifest_version": 3,
    "name": "Focus Mode",
    "description": "Enable focus mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "icons": {
        "16": "images/icon_image_16.png",
        "48": "images/icon_image_48.png",
        "128": "images/icon_image_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon_image_16.png",
            "48": "images/icon_image_48.png",
            "128": "images/icon_image_128.png"
        }
    },
    "permissions": ["activeTab", "scripting"]
}
